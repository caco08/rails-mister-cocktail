<h1> <%= @cocktail.name.capitalize %> </h1>
<%= link_to "Delete Cocktail", cocktail_path, method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
<% @cocktail.doses.each do |dose| %>
<ul> <%= dose.description %> de <%= dose.ingredient.name %>
<%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
</ul>
<% end %>

<%= link_to "Voltar", cocktails_path %>
<%= link_to "Criar Dose", new_cocktail_dose_path(@cocktail) %>

