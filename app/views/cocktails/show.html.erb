<div class = "container">
  <h2> Create - Dose </h2>
  <h3> <%= @cocktail.name.capitalize %> </h3>
  <%= link_to "Delete", cocktail_path, method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
  <% @cocktail.doses.each do |dose| %>
  <ul> <%= dose.description %> de <%= dose.ingredient.name %>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
  </ul>
  <% end %>
</div>

<div>
  <br> <%= link_to "Back", cocktails_path %> <%= link_to "Create", new_cocktail_dose_path(@cocktail) %>
</div>
