<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active" data-interval="2000">
      <img src="https://images.unsplash.com/photo-1523529364348-e930dcb39642?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="d-block w-100" alt="bar">
    </div>
    <div class="carousel-item" data-interval="3000">
      <img src="https://images.unsplash.com/photo-1481833761820-0509d3217039?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="d-block w-100" alt="relax">
    </div>
    <div class="carousel-item" data-interval="4000">
      <img src="https://images.unsplash.com/photo-1515674213736-54d14b4285b4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="d-block w-100" alt="taca">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="bg">
  <div class="container">
    <div class="text-primary">
      <div class="cards">
        <% if @drinks.present? %>
          <% @drinks.each do |drink| %>
            <div class="card-trip m-2">
              <%= image_tag ("cup.jpg") %>
              <div class="card-trip-infos">
                <div>
                  <h4 class="card-title block-with-text mb-2"><%= drink.name %> </h4>
                    <% a= drink.ingredientes %>
                    <% b= a.split(",") %>
                    <% b.each do |item| %>
                    <p class="card-text mr-2"><li>  <%= item %>  </li></p>
                    <% end %>
                    <h4> <strong> Modo de preparo:</strong> </h4>
                  <div class="d-flex justify-content-between" style="width: 100%">
                    <h2 class="card-trip-pricing"><%= drink.metodo %></h2>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


