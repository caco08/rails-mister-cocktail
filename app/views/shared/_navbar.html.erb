<div class="flex-row-reverse navbar navbar-expand-lg navbar-lewagon ">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <%= image_tag "cup.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Home", "/cocktails", class: "dropdown-item" %>
          <%= link_to "Criar Drink", "/doses/new", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
    <nav class="search">
      <form class="form-inline">
        <a data-toggle="tooltip" data-placement="top" title="digite o nome do drink ou do ingrediente.">
          <%= form_tag cocktails_path, method: :get do %>
            <%= text_field_tag :query,
                params[:query],
                class: "form-control string required mr-sm-2",
                placeholder: "drink ou ingrediente" %>
        </a>
          <%= submit_tag "Pesquisar" ,class: "btn btn-outline-success my-2 my-sm-0"  %>
        <% end %>
      </form>
    </nav>
</div>


