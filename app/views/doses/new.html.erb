<div class="container">
  <div class="align-items-center">
    <div class="col-sm-12 offset-md-3 col-md-6 text-secondary">
      <%= simple_form_for(@dose) do |f| %>
      <p class="h3 mt-2 pt-5 mb-5" style="margin-bottom: 3vh"><strong>Crie</strong> seu proprio Drink:</p>
        <%= f.error_notification %>
        <%= f.input :description,  label_html: { class: 'text-secondary font-weight-bolder ml-4 '},
                    label: 'Dose' %>
        <%= f.association :ingredient, label_html: { class: "select2"'text-secondary font-weight-bolder ml-4 rounded-pill'},
                    input_html: { class: "select2" }, placeholder:"selecione os ingredientes",
                    label: 'Ingredientes' %>
        <%= f.button :submit, "Adicionar" , class: "mt-3 btn btn-outline-success btn-block rounded-pill"  %>
      <% end %>
    </div>
  </div>
</div>
