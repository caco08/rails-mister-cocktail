<div class="container">
  <div class="align-items-center">
    <div class="col-sm-12 offset-md-3 col-md-6">
      <%= simple_form_for(@dose) do |f| %>
      <p class="h3 mt-2 pt-5 mb-5" style="margin-bottom: 3vh"><strong>Crie</strong> seu proprio Drink:</p>
        <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :description, collection:["1 dose", "1/2 dose"],
                    input_html: { class: "select2" },
                    label_html: { class: 'font-weight-bolder ml-4 '},
                    label: 'Dose' %>
        <%= f.input :ingredient, collection: @ingredients,  label_html: { class: 'btn-outline-success font-weight-bolder ml-4 rounded-pill'},
                    label: 'Ingredientes', class: "btn-outline-success" %>
        <%= f.button :submit, "Adicionar" , class: "mt-3 btn btn-outline-success btn-block rounded-pill"  %>
      <% end %>
    </div>
  </div>
</div>



